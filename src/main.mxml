    </mx:HTTPService>       

	<!-- Define the All Videos HTTP service -->
    <mx:HTTPService id="all_videos_svc" url="http://www.usana.com/Main/mediaCenter/searchV" resultFormat="e4x" result="allVideosResultHandler()" fault="mx.controls.Alert.show(event.fault.message)" >
   		<mx:request>
			<l>en</l>
		</mx:request>
	</mx:HTTPService>    
	
	<!-- Define the All Videos HTTP service -->
