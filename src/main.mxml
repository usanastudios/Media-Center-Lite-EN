			<USERNAME>usana</USERNAME>
			<PASSWORD>vision99</PASSWORD>
			<OUTPUT>xml</OUTPUT>
			<STARTDATE>2009-01-01</STARTDATE>
			<ENDDATE>2009-07-17</ENDDATE>
		</mx:request>
	</mx:HTTPService>
