    <!-- Define the Basic Search HTTP service -->
    <mx:HTTPService id="search_svc" url="http://www.usana.com/Main/mediaCenter/searchV" resultFormat="e4x" result="searchResultHandler()" fault="mx.controls.Alert.show(event.fault.message)" >
