   		<mx:request>
			<l>en</l>
		</mx:request>
	</mx:HTTPService>    

	<!-- Define the Akamai HTTP service -->
    <mx:HTTPService id="akamai_svc" url="https://secure.streamos.com/qos/qos-xml.php" resultFormat="e4x" result="akamaiResultHandler()" fault="mx.controls.Alert.show(event.fault.message)" >
